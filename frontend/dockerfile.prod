# ==========================
# Build stage
# ==========================
FROM node:22-alpine AS build

WORKDIR /app

# 依存関係を先にインストール（キャッシュ効率向上）
COPY package*.json ./
RUN npm install

# ソースをコピーしてビルド
COPY . .
RUN npm run build

# ==========================
# Serve stage
# ==========================
FROM nginx:alpine

# Viteのビルド成果物をNginx配下へコピー
COPY --from=build /app/dist /usr/share/nginx/html

# ポート公開
EXPOSE 80

# Nginx起動
CMD ["nginx", "-g", "daemon off;"]
